{
  "name": "4js-tests",
  "version": "1.0.0",
  "description": "Test suite for 4.js library",
  "author": "Alan and Alisha",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": ["js", "json"],
    "testMatch": ["**/*.test.js"],
    "collectCoverageFrom": [
      "../../src/**/*.js"
    ]
  }
}
